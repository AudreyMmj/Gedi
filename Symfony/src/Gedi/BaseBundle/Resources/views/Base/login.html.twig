{% extends "GediBaseBundle::layout_base.html.twig" %}

{% block base_titre %}Authentication{% endblock %}

{% block base_contenu %}
    {% if error %}
        <script type="text/javascript">
            alert("Erreur de connexion");
        </script>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-sm-offset-2 col-md-8 col-md-offset-2">
                <div class="panel down-decale effect-transparent">
                    <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}"
                          method="post">
                        <h2 class="form-signin-heading text-center">{{ block('base_titre') }}</h2>
                        <div class="form-group">
                            <div class="col-sm-3 col-sm-offset-3 col-md-6 col-md-offset-3">
                                <input type="text" name="_username" value="{{ last_username }}" class="form-control"
                                       placeholder="Login" required autofocus>
                            </div>
                            <div class="col-sm-3 col-sm-offset-3 col-md-6 col-md-offset-3">
                                <input type="password" name="_password" class="form-control" placeholder="Mot de passe"
                                       required>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <div class="col-sm-3 col-sm-offset-3 col-md-6 col-md-offset-3">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Connexion
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <p class="text-white text-center">Pas encore de compte ? <a class="text-white"
                                                                href="{{ path('register') }} ">Incrivez-vous !</a></p>
{% endblock %}
