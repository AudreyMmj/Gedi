        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <!-- le bouton de connexion n'apparait que lorqu'on est deconnectÃ© -->
            <p><a class="btn btn-primary btn-lg" href="{{ path('login') }}" role="button">Connexion</a></p>
